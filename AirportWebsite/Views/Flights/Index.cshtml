@model IEnumerable<AirportAPI.Entities.Models.Flight>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Fly oversigt</h2>

<p>
    <a asp-action="Create">Opret ny afgang</a>
</p>
<form asp-controller="Flights" asp-action="Index">
    <p>
        <label class="control-label">FromLocation</label>
        <input type="text" name="fromLocation">
        <label class="control-label">ToLocation</label>
        <input type="text" name="toLocation">
        <input type="submit" value="Søg" />
    </p>
</form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FlightId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AircraftType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FromLocation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ToLocation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DepartureTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ArrivalTime)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FlightId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AircraftType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FromLocation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ToLocation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartureTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ArrivalTime)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.FlightId">Rediér flyafgang</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
